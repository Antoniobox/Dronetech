<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="114dp"
        android:layout_height="104dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logodron" />

    <ImageView
        android:id="@+id/imgTricoptero"
        android:layout_width="132dp"
        android:layout_height="89dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="112dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/dron4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="274dp"
        android:layout_height="64dp"
        android:text="DRONETECH"
        android:textColor="#1485A1"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRICÓPTERO"
        android:textColor="#1485A1"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/imgTricoptero" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="183dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Más rápido que Rayo MCQueen Cuchau!"
        app:layout_constraintStart_toEndOf="@+id/imgTricoptero"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imgCuadricoptero"
        android:layout_width="132dp"
        android:layout_height="92dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTricoptero"
        app:srcCompat="@drawable/dron1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="116dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="CUADRICÓPTERO"
        android:textColor="#1485A1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgCuadricoptero"
        app:layout_constraintTop_toTopOf="@+id/imgCuadricoptero" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="183dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:text="Joder, que putas fotos hecha esta mierda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@+id/imgCuadricoptero"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:id="@+id/imgHexacoptero"
        android:layout_width="132dp"
        android:layout_height="98dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCuadricoptero"
        app:srcCompat="@drawable/dron2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="117dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="HEXACÓPTERO"
        android:textColor="#1485A1"
        app:layout_constraintStart_toEndOf="@+id/imgHexacoptero"
        app:layout_constraintTop_toTopOf="@+id/imgHexacoptero" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Usa Linux"
        app:layout_constraintStart_toEndOf="@+id/imgHexacoptero"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/imgOctocoptero"
        android:layout_width="132dp"
        android:layout_height="88dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgHexacoptero"
        app:srcCompat="@drawable/dron3" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="OCTOCÓPTERO"
        android:textColor="#1485A1"
        app:layout_constraintStart_toEndOf="@+id/imgOctocoptero"
        app:layout_constraintTop_toTopOf="@+id/imgOctocoptero" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Viva la EFA El Campico"
        app:layout_constraintStart_toEndOf="@+id/imgOctocoptero"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <!--TODO: usar inflador para hacerlo dinamico-->
</androidx.constraintlayout.widget.ConstraintLayout>